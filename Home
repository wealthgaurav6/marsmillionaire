        // Basic tab functionality for remedies section
        document.getElementById('tab-planet').addEventListener('click', function() {
            this.setAttribute('aria-selected', 'true');
            this.classList.add('border-red-500', 'text-red-500');
            document.getElementById('tab-number').setAttribute('aria-selected', 'false');
            document.getElementById('tab-number').classList.remove('border-red-500', 'text-red-500');
            document.getElementById('tab-issue').setAttribute('aria-selected', 'false');
            document.getElementById('tab-issue').classList.remove('border-red-500', 'text-red-500');
            // Show planet remedies, hide others
        });
        
        document.getElementById('tab-number').addEventListener('click', function() {
            this.setAttribute('aria-selected', 'true');
            this.classList.add('border-red-500', 'text-red-500');
            document.getElementById('tab-planet').setAttribute('aria-selected', 'false');
            document.getElementById('tab-planet').classList.remove('border-red-500', 'text-red-500');
            document.getElementById('tab-issue').setAttribute('aria-selected', 'false');
            document.getElementById('tab-issue').classList.remove('border-red-500', 'text-red-500');
            // Show number remedies, hide others
        });
        
        document.getElementById('tab-issue').addEventListener('click', function() {
            this.setAttribute('aria-selected', 'true');
            this.classList.add('border-red-500', 'text-red-500');
            document.getElementById('tab-planet').setAttribute('aria-selected', 'false');
            document.getElementById('tab-planet').classList.remove('border-red-500', 'text-red-500');
